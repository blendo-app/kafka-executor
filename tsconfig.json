{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "declare": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "types/*",
        "ts-types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}